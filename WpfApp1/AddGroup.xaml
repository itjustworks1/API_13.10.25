<Window x:Class="WpfApp1.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddGroup" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название группы" Grid.Row="0"/>
        <TextBox Text="{Binding Title}" Grid.Row="0" />
        <TextBlock Text="Выберети Специальность для группы" Grid.Row="1"/>
        <ComboBox 
            Width="Auto" 
            Height="25" 
            ItemsSource="{Binding Specials}" 
            SelectedItem="{Binding SelectedSpecial}" 
            DisplayMemberPath="Title"
            Grid.Row="1"
            />
        <Button Click="Close"/>
        <Button Click="AddGroups"/>
    </Grid>
</Window>
