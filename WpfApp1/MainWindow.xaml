<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions >
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Выберети группу" Grid.Row="0"/>
            <ComboBox
                Width="Auto" 
                Height="25" 
                ItemsSource="{Binding Groups}" 
                SelectedItem="{Binding SelectedGroup}" 
                DisplayMemberPath="Title"
                Grid.Row="0"
            />


            <TextBlock Text="{Binding CountGender}" Grid.Row="1"/>

            <Button Width="147" Height="25" Grid.Row="2" HorizontalAlignment="Left" Content="Список групп и студентов" VerticalAlignment="Top" Click="ListGroupAStudent"/>
            <Button Width="125" Height="30" Grid.Row="2" HorizontalAlignment="Center" Content="Общая статистика" VerticalAlignment="Center" Click="AllListStat"/>
            <Button Width="95" Height="25" Grid.Row="2" HorizontalAlignment="Right" Content="Дублирующий" VerticalAlignment="Top" Click="ListDuplicate"/>
            <Button Width="95" Height="25" Grid.Row="2" HorizontalAlignment="Left" Content="Доб.Группу" VerticalAlignment="Bottom" Click="AddGroup"/>
            <Button Width="125" Height="25" Grid.Row="2" HorizontalAlignment="Right" Content="Трансфер.Студент" VerticalAlignment="Bottom" Click="TransferStudent"/>
        </Grid>

        <ListView Grid.Column="0" Grid.RowSpan="2" Background="Beige" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}"/>
                </GridView>
            </ListView.View>
        </ListView>

        
      

    </Grid>
</Window>
